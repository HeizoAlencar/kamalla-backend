// Schemas

generator client {
  provider = "prisma-client-js"
  output   = "../src/database/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum Gender {
  MALE
  FEMALE
}

enum Minigame {
  WHACK_A_MOLE
}

enum ClassRole {
  MEMBER
  TEACHER
  COORDINATOR
}

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
}

enum ActivityStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  ESSAY
}

// Models

model User {
  id              String         @id @default(cuid())
  firstName       String     
  lastName        String     
  username        String        @unique
  email           String         @unique
  emailVerified   Boolean
  password        String?
  gender          Gender?
  birthDate       DateTime?
  userRole        UserRole?      @default(STUDENT)
  profilePicture  String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  deletedAt       DateTime?
  games           Game[]
  studentProfile  Student?
  teacherProfile  Teacher?
  sessions        Session[]
  accounts        Account[]
  userClasses     UserClass[]

  image           String?        @db.Text

  @@map("users")
}

model Student {
  id              String           @id @default(cuid())
  userId          String           @unique
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  xpPoints        Int              @default(0)
  streakCount     Int              @default(0)
  classId         String?
  class           Class?           @relation(fields: [classId], references: [id])
  activities      StudentActivity[]

  @@map("students")
  @@index([classId])
}

model Teacher {
  id            String         @id @default(cuid())
  userId        String         @unique
  user          User           @relation(fields: [userId], references: [id])
  classSubjects ClassSubject[]

  @@map("teachers")
}

model Class {
  id            String         @id @default(cuid())
  name          String
  description   String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  deletedAt     DateTime?

  students      Student[]
  classSubjects ClassSubject[]
  users         UserClass[]
  activities    Activity[]

  @@map("classes")
  @@index([deletedAt])
}

model Subject {
  id            String         @id @default(cuid())
  name          String
  code          String         @unique
  description   String?
  createdAt     DateTime       @default(now())

  classSubjects ClassSubject[]
  games         Game[]

  @@map("subjects")
}

model ClassSubject {
  id        String   @id @default(cuid())
  classId   String
  class     Class    @relation(fields: [classId], references: [id])
  subjectId String
  subject   Subject  @relation(fields: [subjectId], references: [id])
  teacherId String
  teacher   Teacher  @relation(fields: [teacherId], references: [id])
  createdAt DateTime @default(now())

  @@map("class_subjects")
}

model Game {
  id          String      @id @default(cuid())
  title       String
  description String?
  maxScore    Int
  createdAt   DateTime    @default(now())
  userId      String
  user        User        @relation(fields: [userId], references: [id])

  subjectId   String?
  subject     Subject?    @relation(fields: [subjectId], references: [id])

  questions   Question[]
  activities  Activity[]
  @@map("games")
}

model Activity {
  id                String           @id @default(cuid())
  gameId            String
  game              Game             @relation(fields: [gameId], references: [id])
  classId           String
  class             Class            @relation(fields: [classId], references: [id])
  startDate         DateTime
  endDate           DateTime
  durationMinutes   Int
  maxAttempts       Int              @default(1)
  status            ActivityStatus   @default(DRAFT)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  deletedAt         DateTime?

  studentActivities StudentActivity[]

  @@map("activities")
  @@index([deletedAt])
  @@index([status])
  @@index([classId])
  @@index([gameId])
}

model StudentActivity {
  id           String          @id @default(cuid())
  studentId    String
  student      Student         @relation(fields: [studentId], references: [id])
  activityId   String
  activity     Activity        @relation(fields: [activityId], references: [id])
  score        Int             @default(0)
  completed    Boolean         @default(false)
  startedAt    DateTime
  finishedAt   DateTime?
  answers      StudentAnswer[]

  @@unique([studentId, activityId])
  @@map("student_activities")
}

model Question {
  id              String         @id @default(cuid())
  statement       String
  type            QuestionType   @default(MULTIPLE_CHOICE)
  points          Int            @default(1)
  minigame        Minigame?
  difficulty      Difficulty?    @default(EASY)
  durationSeconds Int?           @default(30)

  gameId          String
  game            Game           @relation(fields: [gameId], references: [id])

  options         QuestionOption[]
  studentAnswers  StudentAnswer[]

  @@map("questions")
}

model QuestionOption {
  id             String          @id @default(cuid())
  text           String
  isCorrect      Boolean         @default(false)
  questionId     String
  question       Question        @relation(fields: [questionId], references: [id])
  studentAnswers StudentAnswer[]

  @@map("question_options")
}

model StudentAnswer {
  id                String          @id @default(cuid())
  studentActivityId String
  studentActivity   StudentActivity @relation(fields: [studentActivityId], references: [id])
  questionId        String
  question          Question        @relation(fields: [questionId], references: [id])
  optionId          String
  option            QuestionOption  @relation(fields: [optionId], references: [id])
  isCorrect         Boolean
  answeredAt        DateTime        @default(now())

  @@unique([studentActivityId, questionId])
  @@map("student_answers")
}

model UserClass {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  classId   String
  class     Class     @relation(fields: [classId], references: [id])
  role      ClassRole @default(MEMBER)
  createdAt DateTime  @default(now())

  @@unique([userId, classId])
  @@map("user_classes")
}

model Session {
  id          String    @id
  expiresAt   DateTime
  token       String
  createdAt   DateTime
  updatedAt   DateTime
  ipAddress   String?   @db.Text
  userAgent   String?   @db.Text
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("sessions")
}

model Account {
  id                    String    @id
  accountId             String    @db.Text
  providerId            String    @db.Text
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?   @db.Text
  password              String?   @db.Text
  createdAt             DateTime
  updatedAt             DateTime

  @@map("accounts")
}

model Verification {
  id          String    @id
  identifier  String    @db.Text
  value       String    @db.Text
  expiresAt   DateTime
  createdAt   DateTime?
  updatedAt   DateTime?

  @@map("verifications")
}