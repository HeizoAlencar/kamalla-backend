{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@/*": ["src/*"],
      "@database/*": ["src/database/generated/*"],
      "@modules/*": ["src/modules/*"],
      "@classes/*": ["src/shared/application/classes/*"],
      "@exceptions/*": ["src/shared/domain/exceptions/*"],
      "@repositories/*": ["src/repositories/*"],
      "@database/prisma/models*": ["src/database/generated/prisma/models"],
    }
  }
}
